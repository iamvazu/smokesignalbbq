// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  passwordHash      String
  refreshTokenHash  String?
  role              String   @default("staff")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([email])
  @@map("users")
}

model Customer {
  id        String    @id @default(uuid())
  name      String?
  email     String?
  phone     String
  createdAt DateTime  @default(now())
  addresses Address[]
  orders    Order[]

  @@map("customers")
}

model Address {
  id           String   @id @default(uuid())
  customerId   String
  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  addressLine1 String
  addressLine2 String?
  city         String?
  state        String?
  postalCode   String?
  latitude     Decimal?
  longitude    Decimal?
  createdAt    DateTime @default(now())
  orders       Order[]

  @@map("addresses")
}

model Product {
  id                String         @id @default(uuid())
  name              String
  description       String?
  category          String?
  subCategory       String?
  sku               String?        @unique
  slug              String?        @unique

  weight            String?
  price             Int
  discountPrice     Int?
  costPrice         Int?
  stock             Int            @default(0)
  status            String         @default("active")
  isMostPopular     Boolean        @default(false)
  isBestValue       Boolean        @default(false)
  badges            String[]       @default([])
  longDescription   String?        @db.Text
  heatingInstructions String?      @db.Text
  ingredients       String?        @db.Text
  storageInstructions String?      @db.Text
  volume            String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  images            ProductImage[]
  comboItems        ComboItem[]
  orderItems        OrderItem[]
  inventoryLogs     InventoryLog[]
  reviews           Review[]

  @@map("products")
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  imageUrl  String
  createdAt DateTime @default(now())

  @@map("product_images")
}

model ComboPack {
  id                  String      @id @default(uuid())
  name                String?
  slug                String?     @unique
  description         String?
  longDescription     String?     @db.Text
  heatingInstructions String?
  ingredients         String?
  storageInstructions String?
  price               Int?
  originalPrice       Int?
  image               String?
  isMostPopular       Boolean     @default(false)
  isBestValue         Boolean     @default(false)
  status              String      @default("active")
  createdAt           DateTime    @default(now())
  items               ComboItem[]
  orderItems          OrderItem[]
  reviews             Review[]

  @@map("combo_packs")
}

model ComboItem {
  id        String    @id @default(uuid())
  comboId   String
  combo     ComboPack @relation(fields: [comboId], references: [id])
  productId String
  product   Product   @relation(fields: [productId], references: [id])
  quantity  Int       @default(1)

  @@map("combo_items")
}

model Order {
  id             String      @id @default(uuid())
  customerId     String?
  customer       Customer?   @relation(fields: [customerId], references: [id])
  addressId      String?
  address        Address?    @relation(fields: [addressId], references: [id])
  totalAmount    Int
  deliveryFee    Int         @default(0)
  taxAmount      Int         @default(0)
  paymentStatus  String      @default("pending")
  orderStatus    String      @default("pending")
  deliveryStatus String      @default("pending")
  paymentMethod  String?
  createdAt      DateTime    @default(now())
  items          OrderItem[]
  payments       Payment[]

  @@map("orders")
}

model OrderItem {
  id        String     @id @default(uuid())
  orderId   String
  order     Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String?
  product   Product?   @relation(fields: [productId], references: [id])
  comboId   String?
  combo     ComboPack? @relation(fields: [comboId], references: [id])
  name      String     @default("Legacy Item")
  quantity  Int
  price     Int

  @@map("order_items")
}

model Payment {
  id             String   @id @default(uuid())
  orderId        String
  order          Order    @relation(fields: [orderId], references: [id])
  amount         Int
  paymentMethod  String
  paymentStatus  String
  transactionId  String?
  createdAt      DateTime @default(now())


  @@map("payments")
}

model DiscountCode {
  id               String   @id @default(uuid())
  code             String   @unique
  discountType     String   // percentage, fixed
  discountValue    Int
  expiryDate       DateTime
  usageLimit       Int?
  usedCount       Int      @default(0)
  isActive         Boolean  @default(true)
  isFirstOrderOnly Boolean  @default(false)
  createdAt        DateTime @default(now())

  @@map("discount_codes")
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  source    String?  @default("main_site")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("newsletter_subscribers")
}

model Review {
  id           String     @id @default(uuid())
  productId    String?
  product      Product?   @relation(fields: [productId], references: [id])
  comboId      String?
  combo        ComboPack? @relation(fields: [comboId], references: [id])
  customerName String
  rating       Int        @default(5)
  comment      String?    @db.Text
  status       String     @default("pending") // pending, approved, rejected
  createdAt    DateTime   @default(now())

  @@index([status])
  @@map("reviews")
}

model InventoryLog {
  id           String   @id @default(uuid())
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  changeAmount Int
  reason       String?
  createdAt    DateTime @default(now())

  @@map("inventory_logs")
}

model EventInquiry {
  id          String   @id @default(uuid())
  fullName    String
  phoneNumber String
  eventType   String
  eventDate   String
  location    String?
  guestCount  Int
  message     String?

  status      String   @default("pending") // pending, contacted, booked, cancelled
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("event_inquiries")
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String   @db.Text
  coverImage  String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("blog_posts")
}

model FranchiseInquiry {
  id              String   @id @default(uuid())
  name            String
  email           String
  phone           String
  city            String
  investmentRange String
  businessOrg     String?
  experience      String?
  message         String?
  status          String   @default("pending") // pending, contacted, high_interest, closed, rejected
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("franchise_inquiries")
}
